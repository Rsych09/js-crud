<main class="main">
    {{#with data}}
    <form method="post" action="/purchase-submit?id={{id}}" class="form-card">
        {{>heading title="Ваше замовлення"}}

        <ul class="cart">
            {{#each cart}}
            <li class="cart__item">
                <span>{{text}}</span>
                <span>{{price}} грн</span>
            </li>
            {{/each}}
        </ul>

        {{>divider}}

        {{>heading title="Оформити замовлення"}}

        {{>field label="Ім'я" name="firstname"}}
        {{>field label="Прізвище" name="lastname"}}
        {{>field label="Телефон" name="phone"}}
        {{>field label="Пошта" name="email"}}
        {{>field label="Коментар" name="comment"}}
        {{>field label="Списати бонуси" name="bonus"}}
        {{>field label="Промо-код" name="promocode"}}

        {{>divider}}

        {{>field value="totalPrice" name="promocode" disabled=true}}
        {{>field value="productPrice" name="promocode" disabled=true}}
        {{>field value="deliveryPrice" name="promocode" disabled=true}}

        <strong class="form-card__total">
            Всього: {{totalPrice}} грн
        </strong>

        {{>button text="Оформити замовлення" price=price}}
    </form>
    {{/with}}
</main>