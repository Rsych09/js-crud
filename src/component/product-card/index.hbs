{{#with data.products}}
{{#if isEmpty}}
<mark>Пустий</mark>
{{else}}
{{#each list}}
<div class="card">
    <div class="card__title">{{name}}</div>
    <div class="card__info">{{description}}</div>
    <div class="card__id">ID: {{id}}</div>
    <div class="card__price">{{price}}$</div>
    <a class="card__edit" href="/product-edit?id={{id}}">Редагувати</a>
</div>
{{/each}}
{{/if}}
{{/with}}